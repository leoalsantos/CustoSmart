# Configurações do PostgreSQL
POSTGRES_USER=custosmart
POSTGRES_PASSWORD=custosmart_password
POSTGRES_DB=custosmart_db

# URL de conexão ao banco (usada pelo aplicativo)
DATABASE_URL=postgresql://custosmart:custosmart_password@db:5432/custosmart_db?sslmode=disable

# Ambiente de execução
NODE_ENV=production

# Configuração do servidor
PORT=5000
HOST=0.0.0.0

# Configuração do JWT (Autenticação)
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Opcional: Inicializar banco com dados padrão
INITIALIZE_DB=false

# Configurações de Upload
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=5242880 # 5MB em bytes